            Surface = "rgba(15, 23, 42, 0.8)",
            DrawerBackground = "#0f172a",
            AppbarBackground = "#0a0e27",
            TextPrimary = "#e8eaed",
            TextSecondary = "#94a3b8",
            ActionDefault = "#94a3b8",
